<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_truck_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_garbage_truck_vector"
            android:contentDescription="Truck Icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#4CAF50" />

        <TextView
            android:id="@+id/tv_truck_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="GIGA 28 CBM"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_truck_icon"
            app:layout_constraintTop_toTopOf="@id/iv_truck_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_truck_price" />

        <TextView
            android:id="@+id/tv_truck_make"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Isuzu"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_truck_model"
            app:layout_constraintTop_toBottomOf="@id/tv_truck_model"
            app:layout_constraintEnd_toStartOf="@id/tv_truck_price" />

        <TextView
            android:id="@+id/tv_truck_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±2000.0"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_truck_icon" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_truck_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="LARGE"
            android:textColor="#FFFFFF"
            app:chipBackgroundColor="#4CAF50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_truck_icon" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_waste_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="RECYCLABLE"
            android:textColor="#FFFFFF"
            app:chipBackgroundColor="#03A9F4"
            app:layout_constraintStart_toEndOf="@id/chip_truck_size"
            app:layout_constraintTop_toTopOf="@id/chip_truck_size" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="AVAILABLE"
            android:textColor="#FFFFFF"
            app:chipBackgroundColor="#FF9800"
            app:layout_constraintStart_toEndOf="@id/chip_waste_type"
            app:layout_constraintTop_toTopOf="@id/chip_truck_size" />

        <TextView
            android:id="@+id/tv_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Plate: DEF-5678"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_truck_size" />

        <Button
            android:id="@+id/btn_select_truck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SELECT THIS TRUCK"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_plate_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView> 